<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="1dp">
    
	<ScrollView
	    android:id="@+id/ScrollView1"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingBottom="2dp" >

		<!-- The title, underline, instructions, and buttons are all contained in a linear layout -->
		<LinearLayout
    		android:id="@+id/LinearLayout1"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="vertical"
    		android:paddingBottom="@dimen/activity_vertical_margin"
    		android:paddingLeft="@dimen/activity_horizontal_margin"
    		android:paddingRight="@dimen/activity_horizontal_margin"
    		android:paddingTop="@dimen/activity_vertical_margin">
		
		    <TextView
			    android:id="@+id/mainActivityTitle"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    android:layout_marginTop="1dp"
			    android:text="@string/appTitle"
			    android:textSize="32sp"
			    android:textStyle="bold"
			    android:textColor="#000000" />
	
			<ImageView
			    android:id="@+id/underlineImageView"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    android:layout_marginBottom="15dp"
			    android:src="@drawable/underline" />

    		<TextView
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="wrap_content"
    	   	 	android:layout_gravity="center_horizontal"
    	    	android:text="@string/HomeTitle"
    	    	android:textSize="14sp" />

    		<!-- The buttons are contained in a grid layout -->
    		<GridLayout
        		android:layout_width="wrap_content"
        		android:layout_height="match_parent"
        		android:columnCount="2"
        		android:rowCount="5"
        		android:layout_gravity="center" >

        		<!-- The following 10 buttons have images as backgrounds that change when clicked   -->
        		<!-- see the associated xml file in the drawable-hdpi folder, ex., riff1sel.xml (sel means selector) -->
        		<Button
            		android:id="@+id/riff1button"
            		style="?android:attr/buttonStyleSmall"
            		android:layout_width="80dp"
            		android:layout_height="80dp"
            		android:layout_column="0"
            		android:layout_gravity="start|top"
            		android:layout_marginTop="40dp"
            		android:layout_marginLeft="0dp"
            		android:layout_row="0"
            		android:background="@drawable/riff1sel"
            		android:text="" />

		       	<Button
		           	android:id="@+id/riff2button"
		           	style="?android:attr/buttonStyleSmall"
		           	android:layout_width="80dp"
		           	android:layout_height="80dp"
		           	android:layout_column="1"
		           	android:layout_gravity="left|center_vertical"
		           	android:layout_marginTop="40dp"
		           	android:layout_marginLeft="50dp"
		           	android:layout_row="0"
		           	android:text=""
		           	android:background="@drawable/riff2sel" />
		
		       	<Button
		       	    android:id="@+id/riff3button"
		       	    style="?android:attr/buttonStyleSmall"
		       	    android:layout_width="80dp"
		       	    android:layout_height="80dp"
		       	    android:layout_column="0"
		       	    android:layout_gravity="center_horizontal|bottom"
		       	    android:layout_marginLeft="0dp"
		       	    android:layout_marginTop="50dp"
		       	    android:layout_row="1"
		       	    android:background="@drawable/riff3sel"
		       	    android:text="" />
		
		       	<Button
		       	    android:id="@+id/riff4button"
		       	    style="?android:attr/buttonStyleSmall"
		       	    android:layout_width="80dp"
		       	    android:layout_height="80dp"
		       	    android:layout_column="1"
		       	    android:layout_gravity="left|bottom"
		       	    android:layout_marginLeft="50dp"
		       	    android:layout_marginTop="50dp"
		       	    android:layout_row="1"
		       	    android:background="@drawable/riff4sel"
		       	    android:text="" />
		
		       	<Button
		       	    android:id="@+id/riff5button"
		       	    style="?android:attr/buttonStyleSmall"
		       	    android:layout_width="80dp"
		       	    android:layout_height="80dp"
		       	    android:layout_column="0"
		       	    android:layout_gravity="center"
		       	    android:layout_marginLeft="0dp"
		       	    android:layout_marginTop="50dp"
		       	    android:layout_row="2"
		       	    android:background="@drawable/riff5sel"
		       	    android:text="" />
		
		       	<Button
		       	    android:id="@+id/riff6button"
		       	    style="?android:attr/buttonStyleSmall"
		       	    android:layout_width="80dp"
		       	    android:layout_height="80dp"
		       	    android:layout_column="1"
		       	    android:layout_gravity="left|center_vertical"
		       	    android:layout_marginLeft="50dp"
		       	    android:layout_marginTop="50dp"
		       	    android:layout_row="2"
		       	    android:background="@drawable/riff6sel"
		       	    android:text="" />
		
		       	<Button
		       	    android:id="@+id/riff7button"
		       	    style="?android:attr/buttonStyleSmall"
		       	    android:layout_width="80dp"
		       	    android:layout_height="80dp"
		       	    android:layout_column="0"
		       	    android:layout_gravity="center_horizontal|top"
		       	    android:layout_marginLeft="0dp"
		       	    android:layout_marginTop="50dp"
		       	    android:layout_row="3"
		       	    android:background="@drawable/riff7sel"
		       	    android:text="" />
		
		       	<Button
		       	    android:id="@+id/riff8button"
		       	    style="?android:attr/buttonStyleSmall"
		       	    android:layout_width="80dp"
		       	    android:layout_height="80dp"
		       	    android:layout_column="1"
		       	    android:layout_gravity="left|top"
		       	    android:layout_marginLeft="50dp"
		       	    android:layout_marginTop="50dp"
		       	    android:layout_row="3"
		       	    android:background="@drawable/riff8sel"
		       	    android:text="" />
		
		       	<Button
		       	    android:id="@+id/riff9button"
		       	    style="?android:attr/buttonStyleSmall"
		       	    android:layout_width="80dp"
		       	    android:layout_height="80dp"
		       	    android:layout_column="0"
		       	    android:layout_gravity="left|top"
		       	    android:layout_marginLeft="0dp"
		       	    android:layout_marginTop="50dp"
		       	    android:layout_row="4"
		       	    android:background="@drawable/riff9sel"
		       	    android:text="" />
		
		       	<Button
		       	    android:id="@+id/riff10button"
		       	    style="?android:attr/buttonStyleSmall"
		       	    android:layout_width="80dp"
		       	    android:layout_height="80dp"
		       	    android:layout_column="1"
		       	    android:layout_gravity="left|top"
		       	    android:layout_marginLeft="50dp"
		       	    android:layout_marginTop="50dp"
		       	    android:layout_row="4"
		       	    android:background="@drawable/riff10sel"
		       	    android:text="" />
		
		   	</GridLayout>
    	
	    	<Button
	    	    android:id="@+id/ratebeg"
	    	    style="?android:attr/buttonStyleSmall"
	    	    android:layout_width="300dp"
	    	    android:layout_height="50dp"
	    	    android:layout_gravity="center_horizontal"
	    	    android:layout_marginTop="30dp"
	    	    android:textSize="9dp"
	    	    android:backgroundTint="@color/wallet_holo_blue_light"
	    	    android:text="I&apos;m a one-man operation.  Help me out by rating this app! (tap here)"
	    	    android:visibility="visible" />
	    	
	    	<TextView
	    	    android:id="@+id/dismissRateBeg"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginTop="10dp"
	    	    android:textSize="8dp"
	    	    android:clickable="true"
	    	    android:layout_gravity="center"
	    	    android:visibility="visible"
	    	    android:text="(or tap here to get rid of this shameless button)" />

	    	<!-- The following 4 containers lay out the credits at the bottom of the home page -->
	    	<!-- I shamelessly included my name and email address in case someone wants to offer me an awesome job.  Can't hurt, right! -->
	    	<TextView
	    	    android:id="@+id/horizontalRule"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginTop="30dp"
	    	    android:layout_gravity="center"
	    	    android:text="___________________________________" />
	
	    	<TextView
	    	    android:id="@+id/creditsTextView"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_gravity="center"
	    	    android:layout_marginTop="3dp"
	    	    android:layout_marginBottom="10dp"
	    	    android:textStyle="bold"
	    	    android:textSize="10.5sp"
	    	    android:text="@string/credits" />
	
	    	<TextView
	    	    android:id="@+id/emailTextView"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginBottom="0dp"
	    	    android:layout_gravity="center"
	    	    android:text="@string/email" />
	
	    	<TextView
	    	    android:id="@+id/horizontalRule2"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_gravity="center"
	    	    android:layout_marginTop="-7dp"
	    	    android:layout_marginBottom="40dp"
	    	    android:text="___________________________________" />
	
		</LinearLayout>
		
	</ScrollView>
	
	<LinearLayout
    	android:id="@+id/LinearLayout2"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:paddingBottom="1dp"
    	android:paddingLeft="1dp"
    	android:paddingRight="1dp"
    	android:paddingTop="1dp"
    	android:layout_alignBottom="@+id/ScrollView1">    	
		
		<com.google.android.gms.ads.AdView
        		android:id="@+id/adView"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginTop="1dp"
        		android:layout_gravity="center_horizontal"
        		ads:adUnitId="@string/homebanner"
        		ads:adSize="BANNER">
    		</com.google.android.gms.ads.AdView>
		
		</LinearLayout>
	
	</RelativeLayout>
