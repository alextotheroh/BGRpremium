<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/velvet">

    <!-- image of riff tab -->
    <ImageView
        android:id="@+id/riffImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="2dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <!-- play button -->
    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_play_circle_outline_black_24dp"
        android:background="@null"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/riffImage"
        android:scaleType="fitXY"/>

    <!-- rate beg imagebutton -->
    <ImageButton
        android:id="@+id/rateBeg"
        android:layout_width="170dp"
        android:layout_height="130dp"
        android:src="@drawable/rate_beg_text"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitEnd"
        android:visibility="gone"/>

    <!-- back button, which is a FAB -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        app:backgroundTint="@color/black"
        android:tint="@color/colorButtonNumbers"
        app:elevation="4dp" />

</RelativeLayout>
