<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.indiana.bluesguitarriffs"
    android:versionCode="4"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <!-- Include required permissions for Google Mobile Ads to run-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <!--This meta-data tag is required to use Google Play Services.-->
        <meta-data android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Riff1Activity"
            android:label="@string/title_activity_riff1" >
        </activity>
        <activity
            android:name=".Riff2Activity"
            android:label="@string/title_activity_riff2" >
        </activity>
        <activity
            android:name=".Riff3Activity"
            android:label="@string/title_activity_riff3" >
        </activity>
        <activity
            android:name=".Riff4Activity"
            android:label="@string/title_activity_riff4" >
        </activity>
        <activity
            android:name=".Riff5Activity"
            android:label="@string/title_activity_riff5" >
        </activity>
        <activity
            android:name=".Riff6Activity"
            android:label="@string/title_activity_riff6" >
        </activity>
        <activity
            android:name=".Riff7Activity"
            android:label="@string/title_activity_riff7" >
        </activity>
        <activity
            android:name=".Riff8Activity"
            android:label="@string/title_activity_riff8" >
        </activity>
        <activity
            android:name=".Riff9Activity"
            android:label="@string/title_activity_riff9" >
        </activity>
        <activity
            android:name=".Riff10Activity"
            android:label="@string/title_activity_riff10" >
        </activity>
        
        <!--Include the AdActivity configChanges and theme. -->
        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        
    </application>

</manifest>
