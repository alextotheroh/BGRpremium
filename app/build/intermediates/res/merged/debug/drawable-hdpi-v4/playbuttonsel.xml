<!-- This file's only purpose is to 'animate' the play button.  It does this by 
displaying a slightly different image depending on whether the button is 
clicked or not. 
-->

<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
    <item android:state_focused="true" android:state_pressed="false" android:drawable="@drawable/playbuttonraw" /> 
    <item android:state_focused="true" android:state_pressed="true" android:drawable="@drawable/playbuttondown" /> 
    <item android:state_focused="false" android:state_pressed="true" android:drawable="@drawable/playbuttondown" /> 
    <item android:drawable="@drawable/playbuttonraw" /> 
</selector>
