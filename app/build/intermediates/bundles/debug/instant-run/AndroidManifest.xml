        <activity
            android:name="edu.indiana.bluesguitarriffs.Riff7Activity"
            android:label="@string/title_activity_riff7" >
        </activity>
        <activity
            android:name="edu.indiana.bluesguitarriffs.Riff8Activity"
            android:label="@string/title_activity_riff8" >
