        <activity
            android:name="edu.indiana.bluesguitarriffs.Riff4Activity"
            android:label="@string/title_activity_riff4" >
        </activity>
        <activity
            android:name="edu.indiana.bluesguitarriffs.Riff5Activity"
            android:label="@string/title_activity_riff5" >
